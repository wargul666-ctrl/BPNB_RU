{{!-- РУССКИЙ СПИСОК ОРУЖИЯ — КРАСИВО, ЧИТАЕМО, РАБОЧЕЕ --}}
<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "BPNB_BORG.Item.Name"}}</div>
    <div class="item-formula">{{localize "BPNB_BORG.Item.Weapon.Damage"}}</div>
    <div class="item-prop">{{localize "BPNB_BORG.Item.Weapon.Type"}}</div>
    <div class="item-prop">{{localize "BPNB_BORG.Item.Weapon.Ammo"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize 'DOCUMENT.Create' type=(localize 'BPNB_BORG.Item.Weapon.Weapon')}}"
         data-type="weapon">
        <i class="fas fa-plus"></i> {{localize "BPNB_BORG.Item.Weapon.New"}}
      </a>
    </za>
  </li>

  {{#each weapons as |item id|}}
  <li class="item flexrow" data-item-id="{{item._id}}">
    <div class="item-name">
      <div class="item-image post-item-description" title="{{localize 'BPNB_BORG.Item.ShowDescription'}}">
        <a class="rollable" data-roll-type="item">
          <img src="{{item.img}}" title="{{item.name}}" width="24" height="24" />
        </a>
      </div>
      <h4 class="rollable" 
          data-roll-type="weapon" 
          data-item-id="{{item._id}}"
          title="{{localize 'BPNB_BORG.Item.Weapon.RollAttack'}}">
        {{item.name}}
        {{#if item.system.two_handed}}<i class="fas fa-handshake" title="{{localize 'BPNB_BORG.Item.Weapon.TwoHanded'}}"></i>{{/if}}
        {{#if item.system.ranged}}<i class="fas fa-crosshairs" title="{{localize 'BPNB_BORG.Item.Weapon.Ranged'}}"></i>{{/if}}
      </h4>
    </div>

    <div class="item-formula">
      <a class="rollable damage-roll" 
         data-roll="{{item.system.damage}}" 
         data-label="{{localize 'BPNB_BORG.Item.Weapon.DamageRoll'}} {{item.name}}"
         title="{{localize 'BPNB_BORG.Item.Weapon.RollDamage'}}">
        <i class="fas fa-dice-d20"></i> {{item.system.damage}}
      </a>
    </div>

    <div class="item-prop">
      {{#if item.system.ranged}}
        <span class="tag ranged">{{localize "BPNB_BORG.Item.Weapon.Ranged"}}</span>
      {{else}}
        <span class="tag melee">{{localize "BPNB_BORG.Item.Weapon.Melee"}}</span>
      {{/if}}
      {{#if item.system.two_handed}}
        <span class="tag twohanded">{{localize "BPNB_BORG.Item.Weapon.TwoHanded"}}</span>
      {{/if}}
    </div>

    <div class="item-prop">
      {{#if item.system.needs_ammo}}
        <input type="text" 
               class="item-ammunition inline-edit" 
               value="{{item.system.ammunition}}" 
               data-field="system.ammunition"
               placeholder="0"
               title="{{localize 'BPNB_BORG.Item.Weapon.AmmoLeft'}}" />
      {{else}}
        <span class="no-ammo">—</span>
      {{/if}}
    </div>

    <div class="item-controls">
      <a class="item-control item-edit" title="{{localize 'DOCUMENT.Update' type=(localize 'BPNB_BORG.Item.Weapon.Weapon')}}">
        <i class="fas fa-edit"></i>
      </a>
      <a class="item-control item-delete" title="{{localize 'DOCUMENT.Delete' type=(localize 'BPNB_BORG.Item.Weapon.Weapon')}}">
        <i class="fas fa-trash"></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>