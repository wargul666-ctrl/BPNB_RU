<ol class="items-list">
  <li class="item flexrow items-header">
    <div class="item-name">{{localize "BPNB_BORG.Item.Name"}}</div>
    <div class="item-controls">
      <a class="item-control item-create" title="{{localize 'DOCUMENT.Create' type='особенность'}}" data-type="feature">
        <i class="fas fa-plus"></i> {{localize "BPNB_BORG.AddFeature"}}
      </a>
    </div>
  </li>
  {{#each features as |item id|}}
  <li class="item flexrow" data-item-id="{{item._id}}">
    <div class="item-name">
      <div class="item-image post-item-description">
        <a class="rollable" data-roll-type="item">
          <img src="{{item.img}}" title="{{item.name}}" width="24" height="24"/>
        </a>
      </div>
      <h4 class="item-title rollable" data-roll-type="item" data-item-id="{{item._id}}">
        {{item.name}}
      </h4>
    </div>
    <div class="item-controls">
      <a class="item-control item-edit" title="{{localize 'DOCUMENT.Update' type='особенность'}}">
        <i class="fas fa-edit"></i>
      </a>
      <a class="item-control item-delete" title="{{localize 'DOCUMENT.Delete' type='особенность'}}">
        <i class="fas fa-trash"></i>
      </a>
    </div>
  </li>
  {{/each}}
</ol>