<form class="custom-dialog attack-dialog">
  <header class="dialog-header">
    <h2>Атака: {{label}}</h2>
  </header>

  <input type="hidden" name="itemid" value="{{itemId}}" />
  <input type="hidden" name="rollLabel" value="{{label}}" data-dtype="String" />

  <div class="form-group">
    <label class="resource-label">Бросок (d20 + мод):</label>
    <input
      type="text"
      name="rollFormula"
      value="{{rollFormula}}"
      data-dtype="String"
    />
  </div>

  <div class="form-group">
    <label class="resource-label">DR:</label>
    <input
      type="text"
      name="rollDRFormula"
      value="{{rollDRFormula}}"
      data-dtype="String"
    />
  </div>

  <div class="form-group">
    <label class="resource-label">Damage:</label>
    <input
      type="text"
      name="rollDamageFormula"
      value="{{rollDamageFormula}}"
      placeholder="D4"
      data-dtype="String"
    />
  </div>

  <footer class="dialog-buttons">
    <button type="submit" class="dialog-button roll">Бросить</button>
    <button type="button" class="dialog-button cancel" data-action="close">Отмена</button>
  </footer>
</form>
