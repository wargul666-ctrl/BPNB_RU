<div class="bpnb-generator">
  <h2>Генератор персонажей</h2>
  <h3>Чёрный порох и Сера</h3>

  <div class="classes-list">
    {{#each classes}}
    <details class="class-block" open>
      <summary>
        <label>
          <input type="checkbox" class="class-checkbox" value="{{id}}">
          <strong>{{name}}</strong>
        </label>
      </summary>

      {{#if subclasses}}
      <div class="subclasses">
        {{#each subclasses}}
        <label class="sub-label">
          <input type="checkbox" class="sub-checkbox" data-class="{{../id}}" data-subid="{{id}}">
          {{name}}
        </label>
        {{/each}}
      </div>
      {{else}}
      <div class="no-subs">— без специализаций —</div>
      {{/if}}
    </details>
    {{/each}}
  </div>

  <div class="buttons">
    <button id="random-all" class="btn">
      Случайно из всех
    </button>
    <button id="random-selected" class="btn primary">
      Случайно из отмеченных
    </button>
  </div>
</div>

<style>
.bpnb-generator { padding: 16px; font-family: "Signika", sans-serif; color: #191813; }
h2, h3 { margin: 0 0 12px; text-align: center; color: #b34a28; }
h3 { font-size: 1.1em; }

.class-block {
  margin: 12px 0;
  border: 1px solid #b34a28;
  border-radius: 6px;
  background: #fdfbef;
}
.class-block summary {
  padding: 8px 12px;
  cursor: pointer;
  font-weight: bold;
  background: #b34a28;
  color: white;
  border-radius: 5px 5px 0 0;
}
.class-block summary label {
  display: flex;
  align-items: center;
  gap: 8px;
  margin Thermal: 0;
}
.subclasses {
  padding: 10px 16px 12px;
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(160px, 1fr));
  gap: 6px;
}
.sub-label {
  display: flex;
  align-items: center;
  gap: 6px;
  font-size: 0.95em;
}
.no-subs {
  padding: 8px 16px;
  color: #666;
  font-style: italic;
}
.buttons {
  margin-top: 24px;
  display: flex;
  gap: 12px;
  justify-content: center;
}
.btn {
  padding: 12px 24px;
  font-weight: bold;
  border: 2px solid #b34a28;
  border-radius: 6px;
  background: #fdfbef;
  color: #191813;
  cursor: pointer;
}
.btn.primary { background: #b34a28; color: white; }
.btn:hover { opacity: 0.9; }
</style>